
@font-face {
    font-family: 'Pictonic';
    src: url('<%= asset_path "pictonic.eot?#iefix" %>') format('embedded-opentype'), 
         url('<%= asset_path "pictonic.woff" %>') format('woff'), 
         url('<%= asset_path "pictonic.ttf" %>')  format('truetype'),
         url('<%= asset_path "pictonic.svg#svgPictonic" %>') format('svg');
}

#path-name{
  color: #8c86ac;
  font-weight: 300;
  font-size: 1.8em;
  margin-top: 40px;
}
.ui-page-theme-a .right a{
 color: white !important;
 text-shadow: none !important;
}

.ui-overlay-a, .ui-page-theme-a, .ui-page-theme-a .ui-panel-wrapper {
  text-shadow: none !important;
}

#outer-path-container {
  margin: 50px 0 100px 0;
  width: 100%;
}

.path-bg{
  background: #55507b; /* Old browsers */
  background: -moz-linear-gradient(top, #55507b 1%, #87608d 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#55507b), color-stop(100%,#87608d)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #55507b 1%,#87608d 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #55507b 1%,#87608d 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #55507b 1%,#87608d 100%); /* IE10+ */
  background: linear-gradient(to bottom, #55507b 1%,#87608d 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#55507b', endColorstr='#87608d',GradientType=0 ); /* IE6-9 */
}

#due-cards{
  padding: 20px 40px;
  margin: 30px 0 30px 0;
  background-color: #e7b803;
  text-shadow: none !important;
  font-weight: 300;
  border-radius: 35px;
  display: inline-block;
  border: 1px solid #c89303;
  color: #a55d00;
}

#inner-path-container {
  width: 75%;
  background-color: #f8f8f8;
  text-align: center;
  border: 1px solid #3a3c4a;
  border-radius: 5px;
  color: gray;
  z-index: 20;
}

div a .false, div a .empty {
 background: #e2e1e5; /* Old browsers */
 background: -moz-linear-gradient(top, #e2e1e5 0%, #f1f0f3 100%); /* FF3.6+ */
 background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e2e1e5), color-stop(100%,#f1f0f3)); /* Chrome,Safari4+ */
 background: -webkit-linear-gradient(top, #e2e1e5 0%,#f1f0f3 100%); /* Chrome10+,Safari5.1+ */
 background: -o-linear-gradient(top, #e2e1e5 0%,#f1f0f3 100%); /* Opera 11.10+ */
 background: -ms-linear-gradient(top, #e2e1e5 0%,#f1f0f3 100%); /* IE10+ */
 background: linear-gradient(to bottom, #e2e1e5 0%,#f1f0f3 100%); /* W3C */
 filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e2e1e5', endColorstr='#f1f0f3',GradientType=0 ); /* IE6-9 */
  color: gray;
  -moz-box-shadow:    inset 1px 2px 7px #f4f2f1;
  -webkit-box-shadow: inset 1px 2px 7px #f4f2f1;
  box-shadow:         inset 1px 2px 7px #f4f2f1;
  border: 2px solid #d6d4d8;
}

div a .false .deck-icon, div a .empty .deck-icon{
    color: #a9a9a9;
    text-shadow: none;
}
div a .false .big-deck-icon, div a .empty .big-deck-icon{
    color: #a9a9a9;
    text-shadow: none;
}

div a .false .lock, div a .empty .lock{
  color: #b6b6b6;
  float: right;
  font-size: 1.1em;
  margin: 10px 10px 0 0;
  }

i.fa.fa-lock{
  color: #d5772e;
}

.deck-object {
  width: 235px;
  height: 110px;
  padding-top: 15px;
  margin: 20px 15px !important;
  font-size: 1em;
  display: inline-block;
  font-weight: 300 !important;
  border-radius: 7px;
/*  color: white;*/
  vertical-align: middle;
  border: 1px solid #d6d4d8;
  background-color: #d5772e;
}

.deck-icon.icon-github-01{
  font-size: 3.2em;
  
}

.deck-icon{
  font-size: 2.3em;
  padding: 10px 0 10px 20px;
  font-family: 'Pictonic';
/*  text-shadow: 1px 1px 6px #ebad12;*/
}

.deck-icon .lock{
 /* color: rgba(0,0,0,1);*/
  display: none;
  background-color: #d5772e;
}

.deck-object-lock {
  border-radius: 50%;
  width: 90px;
  height: 90px;
  margin: 30px 0 10px 0;
}

.illustration{
  width: 100%;
  position:fixed;
  bottom:0px;
 }
